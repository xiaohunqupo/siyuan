{
  "compilerOptions": {
    "outDir": "./src/types/dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "./src/types",
      "node"
    ],
    "declaration": true,
    "emitDeclarationOnly": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
